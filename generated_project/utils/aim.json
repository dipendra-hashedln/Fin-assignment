{
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/dashboard/tiles",
      "description": "Fetch Dashboard Data"
    },
    {
      "method": "POST",
      "path": "/api/lms/leaves/apply",
      "description": "Apply for Leave"
    },
    {
      "method": "GET",
      "path": "/api/lms/leaves/status",
      "description": "Retrieve Leave Status"
    },
    {
      "method": "PATCH",
      "path": "/api/lms/leaves/{leave_id}/approve",
      "description": "Approve/Reject Leave (Manager Only)"
    },
    {
      "method": "POST",
      "path": "/api/pods/assign",
      "description": "Assign Employee to Pod"
    },
    {
      "method": "GET",
      "path": "/api/pods/{pod_id}/details",
      "description": "Get Pod Details"
    },
    {
      "method": "POST",
      "path": "/api/pods/{pod_id}/recommend",
      "description": "Recommend an Employee for a Pod"
    },
    {
      "method": "POST",
      "path": "/api/auth/login",
      "description": "User Login"
    },
    {
      "method": "GET",
      "path": "/api/auth/user",
      "description": "Fetch Current User Details"
    }
  ],
  "database_schema": {
    "tables": [
      {
        "name": "leaves",
        "columns": [
          "id",
          "start_date",
          "end_date",
          "reason",
          "status"
        ]
      },
      {
        "name": "pods",
        "columns": [
          "id",
          "name",
          "members"
        ]
      },
      {
        "name": "pod_members",
        "columns": [
          "id",
          "pod_id",
          "user_id",
          "role"
        ]
      },
      {
        "name": "users",
        "columns": [
          "id",
          "email",
          "password",
          "role"
        ]
      }
    ],
    "relationships": [
      {
        "table1": "leaves",
        "table2": "users",
        "relationship": "one-to-one"
      },
      {
        "table1": "pods",
        "table2": "pod_members",
        "relationship": "one-to-many"
      },
      {
        "table1": "pod_members",
        "table2": "users",
        "relationship": "many-to-one"
      }
    ]
  },
  "business_rules": [
    "A user can apply for leave with a valid reason and dates.",
    "A manager can approve or reject a leave request with a comment.",
    "A user can view their granted and pending leave requests.",
    "A manager can access reports of team leave history.",
    "A manager can assign employees to specific pods.",
    "An employee can view their assigned pod and recommend colleagues for inclusion."
  ],
  "auth_requirements": {
    "roles": [
      "general_user",
      "manager"
    ],
    "login_mechanisms": [
      "email",
      "password"
    ],
    "rbac": {
      "manager": [
        "approve_leave",
        "view_team_leave_history",
        "assign_employees_to_pods"
      ],
      "general_user": [
        "apply_for_leave",
        "view_leave_status",
        "view_assigned_pod"
      ]
    }
  }
}